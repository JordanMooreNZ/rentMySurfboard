<%= simple_form_for([@surfboard, @booking]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :rented_on, start_year: Date.today.year, order: [:day, :month, :year] %>
    <%= f.input :duration, collection: Booking.durations.invert, include_blank: false %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
