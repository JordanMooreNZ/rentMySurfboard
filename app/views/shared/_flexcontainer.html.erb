<div class="row">
  <div class="grey">
    <div class="container">
    <br>
    <% if !!@filters %>
      <% @filters.each do |_id, filter| %>
        <%= render "shared/filter", filter: filter%>
      <% end %>
    <% end %>
    </div>
    <br>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="flexcontainer">

  <div class="cards-container">
    <div class="container">
      <div class="row">
      <% @surfboards.each do |surfboard| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= render "shared/card", surfboard: surfboard%>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div id="map" data-markers="<%= @markers.to_json %>">

  </div>

</div>
