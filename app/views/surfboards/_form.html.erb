
<%= simple_form_for(@surfboard) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.association :beach %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price_hash %>
    <%= f.input :address %>
    <%= f.association :user %>
    <%= f.input :board_type %>
    <%= f.input :available %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
